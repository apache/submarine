# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# tab indentation (no size specified)
[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab

# 2 space indentation
[*.{java,sh,json,xml}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{py,R,js}]
indent_style = space
indent_size = 4

[*.java]
max_line_length = 100
